! ===[Misc Configuration]==========================
urxvt.geometry: 120x40
urxvt.visualBell: true
urxvt.saveLines: 0
urxvt.fading: 0
urxvt.cursorBlink: true
urxvt.loginShell: true

urxvt256c-ml.geometry: 120x40
urxvt256c-ml.visualBell: true
urxvt256c-ml.saveLines: 0
urxvt256c-ml.fading: 0
urxvt256c-ml.cursorBlink: true
urxvt256c-ml.loginShell: true

! ===[Extensions]==================================
urxvt.perl-ext-common:   default,clipboard,url-select,font-size
urxvt.keysym.M-v:        perl:clipboard:paste
urxvt.urlButton:         1
urxvt.matcher.button:    1
urxvt.underlineURLs:     true
urxvt.keysym.M-u:        perl:url-select:select_next

urxvt256c-ml.perl-ext-common:   default,clipboard,url-select,font-size
urxvt256c-ml.keysym.M-v:        perl:clipboard:paste
urxvt256c-ml.urlButton:         1
urxvt256c-ml.matcher.button:    1
urxvt256c-ml.underlineURLs:     true
urxvt256c-ml.keysym.M-u:        perl:url-select:select_next

! ===[UI Config]===================================
urxvt.scrollBar: false
urxvt.scrollBar_right: false
!urxvt.scrollstyle: plain

urxvt256c-ml.scrollBar: false
urxvt256c-ml.scrollBar_right: false
!urxvt256c-ml.scrollstyle: plain

! ===[Colorscheme]=================================
#include ".colors/jbromley"

! ===[Xft Configuration]===========================
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
!Xft.autohint: true
Xft.hinting: true
Xft.hintstyle: hintmedium
Xft.lcdfilter: lcddefault

! ===[Font Configuration]==========================
urxvt.font: xft:DejaVu Sans Mono:size=16
urxvt.boldFont: xft:DejaVu Sans Mono:size=16:style=bold
urxvt.italicFont: xft:DejaVu Sans Mono:size=16:style=italic
urxvt.boldItalicFont: xft:DejaVu Sans Mono:size=16:style=italic
urxvt.letterSpace: -2

urxvt256c-ml.font: xft:DejaVu Sans Mono:size=16
urxvt256c-ml.boldFont: xft:DejaVu Sans Mono:size=16:style=bold
urxvt256c-ml.italicFont: xft:DejaVu Sans Mono:size=16:style=italic
urxvt256c-ml.boldItalicFont: xft:DejaVu Sans Mono:size=16:style=italic
urxvt256c-ml.letterSpace: -2

! ===[Extensions]==================================
urxvt.perl-lib:          /home/smerrill/.urxvt/urxvt-perls:/home/smerrill/.urxvt/urxvt-font-size
urxvt.keysym.M-c:        perl:clipboard:copy
